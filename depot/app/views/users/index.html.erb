<h1>Listing users</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td class="btn btn-primary"><%= link_to 'Show', user %></td>
    <td class="btn btn-success"><%= link_to 'Edit', edit_user_path(user) %></td>
    <td class="btn btn-warning"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<span class="btn btn-success"><%= link_to 'New User', new_user_path %></span>
