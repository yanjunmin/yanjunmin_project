<h1>Listing orders</h1>

<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td class="btn btn-default"><%= link_to 'Show', order %></td>
    <td class="btn btn-success"><%= link_to 'Edit', edit_order_path(order) %></td>
    <td class="btn btn-danger"><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

